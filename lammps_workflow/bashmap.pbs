export OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK:-1}
BD=$PWD
cd $BD
# input lammps-AT-config
srun lmp < in.PEsoft > OUTsoft
# output RESTART
cp FINALCONFIG RESTART
# input RESTART
srun lmp < in.PEequil > OUTequil
