cp FINALCONFIG RESTART
#PYTHON SCRIPT GOES HERE
lmp
read_restart FINALCONFIG
write_data outdata
quit
python3 backmap.py
cp lammps-AT-config backmap-round-uno
rm -rf restart.dat.*
rm -rf dump*
exit